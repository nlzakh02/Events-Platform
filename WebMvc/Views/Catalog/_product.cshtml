@model WebMvc.Models.CatalogItem

    <form asp-controller="Cart" asp-action="AddToCart">
        <img class="esh-catalog-thumbnail" src="@Model.PictureURL" />
        <input class="esh-catalog-button" type="submit" value="[ PURCHASE ]" />
        <div class="esh-catalog-name">
            <span>@Model.Name</span>
        </div>
        <div class="esh-catalog-price">
            <span>@Model.Price.ToString("N2")</span>
        </div>
        <input type="hidden" asp-for="@Model.EventType" name="type" />
        <input type="hidden" asp-for="@Model.EventTypeId" name="typeId" />
        <input type="hidden" asp-for="@Model.EventOrganizer" name="organizer" />
        <input type="hidden" asp-for="@Model.EventOrganizerId" name="organizerId" />
        <input type="hidden" asp-for="@Model.Name" name="name" />
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.StartTime" name="startTime" />
        <input type="hidden" asp-for="@Model.EndTime" name="endTime" />
        <input type="hidden" asp-for="@Model.PictureURL" name="pictureUrl" />
        <input type="hidden" asp-for="@Model.Description" name="description" />
        <input type="hidden" asp-for="@Model.Price" name="price" />
        <input type="hidden" asp-for="@Model.EventVenue" name="venue" />
        <input type="hidden" asp-for="@Model.EventVenueId" name="venueId" />
        <input type="hidden" asp-for="@Model.EventAddress" name="address" />
        <input type="hidden" asp-for="@Model.EventAddressId" name="addressId" />
    </form>